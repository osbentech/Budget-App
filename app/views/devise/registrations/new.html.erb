<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="header">
    <div class="back">
      <a href="/" class="back-link"><span class='back-arrow'> &#8592; </span></a>
    </div>
    <div class="middle-title">
      <h2>Sign up</h2>
    </div>
    <div class="next">
      &nbsp;
    </div>
  </div>
  <div class="sign-up-form">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.text_field :name, :required => true, autofocus: true, placeholder: "Name", class: "input" %>
    </div>
    <div class="field">
      <%= f.email_field :email, :required => true, autofocus: true, placeholder: "Email", class: "input" %>
    </div>
    <div class="field">
      <% if @minimum_password_length %>
        <%= f.password_field :password, :required => true,  placeholder: "Password ( #{@minimum_password_length} characters minimum )", class: "input" %>
      <% end %>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, :required => true,  placeholder: "Confirm Password", class: "input" %>
    </div>
    <div class="actions">
      <%= f.submit "Sign Up", class: 'login-button format' %>
    </div>

    <br />
    <%= render "devise/shared/links" %>
  </div>
<% end %>