<div class="log-container">
    <div class="mx-auto max-w-lg text-center">
      <h1 class="login-head">Budget App</h1>

      <p class="lp">
        Log in to your account to continue
      </p>
    </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mx-auto mt-8 mb-0 max-w-md space-y-4">

  <div class="email">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"emailf" %>
  </div>

  <div class="pass">
    <%= f.label :password, class:"sr-only" %>

    <div class="pass">
      <%= f.password_field :password, autocomplete: "current-password", class:"passf" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="actions">
  <%= f.submit "Log in", class:"login" %>
  </div>

  </div>
      <% end %>
  </div>

  <div class="flex flex-col items-center justify-between">
    <%= render "devise/shared/links" %>
  </div>
</div>
