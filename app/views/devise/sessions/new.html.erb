<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="header">
    <div class="back">
      <a href="/" class="back-link"><span class='back-arrow'> &#8592; </span></a>
    </div>
    <div class="middle-title">
      <h2>Login</h2>
    </div>
    <div class="next">
      &nbsp;
    </div>
  </div>
  <div class="sign-up-form">
    <div class="field">
      <%= f.email_field :email, :required => true, autofocus: true, placeholder: "Email", class: "input"  %>
    </div>
    <div class="field">
      <%= f.password_field :password, :required => true, placeholder: "Password", class: "input"  %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in", class: 'login-button format' %>
    </div>

    <br />
    <%= render "devise/shared/links" %>
  </div>
<% end %>